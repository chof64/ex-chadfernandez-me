{
  "git": {
    "commitMessage": "release: v${version}"
  },
  "hooks": {
    "before:init": "npm run lint",
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}
